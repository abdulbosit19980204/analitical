-var ionRangeslider = true;

doctype html
html(lang="en")
  include ../components/mixinfiles
  +headerfile("Range Slider")
  body

    +header

    .themebody-wrap

      // breadcrumb start
      +codexbreadcrumb('range slider','element')
      // breadcrumb end

      // theme body start
      .theme-body       
          .grid.grid-cols-12.cdx-gap          
            .col-span-12
              .card
                .card-header 
                  h4 basic slider
                .card-body
                  .mb-20       
                    input(type="text" class="basic-range" name="my-range" value="")
                  input(type="text" class="minmax-range" name="my-range" value="")
            .col-span-12 
              .card
                .card-header 
                  h4 range with negative values
                .card-body             
                  .mb-20  
                    input(type="text" class="negetive-valrange" name="my-range" value="")    
                  input(type="text" class="negetivestap-valragne" name="my-range" value="") 
            .col-span-12 
              .card
                .card-header 
                  h4 range with custom values
                .card-body 
                  .mb-20                           
                    input(type="text" class="custom-valrange" name="my-range" value="")
                  input(type="text" class="evenstring-range" name="my-range" value="")    
      // theme body end
        
    // footer start 
    +footer
    // footer end
    
    +footerfile