doctype html
html(lang="en")
  include ../components/mixinfiles
  +headerfile("Grid")
  body

    +header

    .themebody-wrap

      // breadcrumb start
      +codexbreadcrumb('grid','element')
      // breadcrumb end

      // theme body start
      .theme-body       
        .grid.grid-cols-12.cdx-gap
          .col-span-12.hidden 
            .card
              .card-header 
                h4 grid options
              .card-body
                table.table.table-bordered
                  thead
                    tr
                      th(scope='col')
                      th(scope='col')
                        | xs
                        br
                        span.fw-normal &lt;576px
                      th(scope='col')
                        | sm
                        br
                        span.fw-normal &ge;576px
                      th(scope='col')
                        | md
                        br
                        span.fw-normal &ge;768px
                      th(scope='col')
                        | lg
                        br
                        span.fw-normal &ge;992px
                      th(scope='col')
                        | xl
                        br
                        span.fw-normal &ge;1200px
                      th(scope='col')
                        | xxl
                        br
                        span.fw-normal &ge;1400px
                  tbody
                    tr
                      th.text-nowrap(scope='row')
                        | Container 
                        code.fw-normal max-width
                      td None (auto)
                      td 540px
                      td 720px
                      td 960px
                      td 1140px
                      td 1320px
                    tr
                      th.text-nowrap(scope='row') Class prefix
                      td
                        code .col-
                      td
                        code .col-sm-
                      td
                        code .col-md-
                      td
                        code .col-lg-
                      td
                        code .col-xl-
                      td
                        code .col-xxl-
                    tr
                      th.text-nowrap(scope='row') # of columns
                      td(colspan='6') 12
                    tr
                      th.text-nowrap(scope='row') Gutter width
                      td(colspan='6') 1.5rem (.75rem on left and right)
                    tr
                      th.text-nowrap(scope='row') Custom gutters
                      td(colspan='6')
                        a(href='/docs/5.0/layout/gutters/') Yes
                    tr
                      th.text-nowrap(scope='row') Nestable
                      td(colspan='6')
                        a(href='#nesting') Yes
                    tr
                      th.text-nowrap(scope='row') Column ordering
                      td(colspan='6')
                        a(href='/docs/5.0/layout/columns/#reordering') Yes
